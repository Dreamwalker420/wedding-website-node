                .col-sm-12
                  .thumbnail.hvr-glow
                    a(href='http://www.bedbathandbeyond.com/store/giftregistry/view_registry_guest.jsp?pwsToken=&eventType=Wedding&registryId=542887716&pwsurl=' target='_blank')
