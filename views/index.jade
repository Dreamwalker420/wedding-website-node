                .col-sm-12
                  .thumbnail.hvr-glow
                    a(href='http://www.kohls.com/upgrade/gift_registry/kohlsgrw_home.jsp?section=list&listid=3119190&viewtype=listview&isfromsearch=true&fname=katie&lname=minesinger&regtype=registry.wedding,registry.baby,registry.splday' target='_blank')
