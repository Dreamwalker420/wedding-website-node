                    .form-group
                      label Email
                      input.form-control(type='email' name='email' placeholder='Email')
                    .form-group
                      label Question
                      textarea.form-control(rows='3' name='question' placeholder='Question')
                    button.btn.btn-success(type='submit') Submit
            - if(admin == true)
              .admintools.article
                h1.content-title Admin Tools
                hr
                h2 Hits: {{ hits }}
                h2 Status:&nbsp;
                  button.btn(ng-click='toggleStatus()') {{ status }}

  .modal.fade(id='picModal' tabindex='1' role='dialog')
    .modal-dialog
      .modal-content
        .model-body
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
          img(id='modalImg')
