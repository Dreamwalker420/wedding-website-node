extends layout

block content
    - if(message.length > 0)
        .alert.alert-danger= message
    form(action='/signup' method='post')
        .form-group
            label Username
            input.form-control(type='text' name='username')
        .form-group
            label Password
            input.form-control(type='password' name='password')
        button.btn.btn-success(type='submit') Signup

